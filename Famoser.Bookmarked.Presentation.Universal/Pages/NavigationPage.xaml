<Page
    x:Class="Famoser.Bookmarked.Presentation.Universal.Pages.NavigationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:navigationPage="using:Famoser.Bookmarked.Presentation.Universal.UserControls.NavigationPage"
    mc:Ignorable="d" Loaded="Page_Loaded"
    DataContext="{Binding NavigationViewModel, Source={StaticResource Locator}}">

    <Page.Resources>
        <DataTemplate x:Key="FolderDataTemplate">
            <StackPanel Style="{StaticResource ListViewDataTemplateStackPanel}" AllowDrop="True" DragOver="UIElement_OnDragOver" Drop="UIElement_OnDrop">
                <TextBlock Style="{StaticResource ItemHeader}" Text="{Binding Name}" />
                <TextBlock Style="{StaticResource ItemDescription}" Text="{Binding Description}" />
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="EntryDataTemplate">
            <Grid Style="{StaticResource ListViewDataTemplateGrid}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="6" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="6" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Image Stretch="Uniform" Grid.Column="1" Width="80">
                    <Image.Source>
                        <BitmapImage UriSource="{Binding IconUri}" />
                    </Image.Source>
                </Image>
                <StackPanel Grid.Column="3">
                    <TextBlock Style="{StaticResource ItemHeader}" Text="{Binding Name}" />
                    <TextBlock Style="{StaticResource ItemDescription}" Text="{Binding Description}" />
                </StackPanel>
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="ContentTypeModelTemplate">
            <TextBlock Text="{Binding Name}" Style="{StaticResource ParagraphTextBlock}" />
        </DataTemplate>
    </Page.Resources>


    <Grid Style="{StaticResource LayoutGrid}">
        <Grid Style="{StaticResource FullContentGrid}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <ProgressBar Grid.Row="0" Visibility="{Binding ProgressViewModel.ShowProgress, Source={StaticResource Locator}, Converter={StaticResource BoolToVisibilityConverter}}" Value="{Binding ProgressViewModel.ActiveProgress, Source={StaticResource Locator}, Mode=TwoWay}" VerticalAlignment="Top" Maximum="{Binding ProgressViewModel.MaxProgress, Source={StaticResource Locator}}" Minimum="0" IsIndeterminate="False"/>
            <Grid Grid.Row="0">
                <navigationPage:FolderHeader DataContext="{Binding }" Visibility="{Binding InSearchMode, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=invert}"/>
                <navigationPage:SearchHeader DataContext="{Binding }" Visibility="{Binding InSearchMode, Converter={StaticResource BoolToVisibilityConverter}}"/>
                <Grid AllowDrop="True" x:Name="MoveUpGrid" Visibility="Collapsed" Drop="MoveUpGrid_OnDrop" DragOver="MoveUpGrid_OnDragOver" Background="{ThemeResource SystemControlBackgroundAccentBrush}" Width="70">
                    <SymbolIcon Symbol="Up" Foreground="White" />
                </Grid>
            </Grid>
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
                <StackPanel>
                    <StackPanel Visibility="{Binding InSearchMode, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=invert}">
                        <ListView CanDragItems="True" DragItemsStarting="ListView_OnDragItemsStarting" DragItemsCompleted="ListView_DragItemsCompleted" IsItemClickEnabled="True" AllowDrop="True" SelectionMode="None" ItemClick="ListView_ItemClick" ItemsSource="{Binding SelectedFolder.Folders}" ItemTemplate="{StaticResource FolderDataTemplate}" ItemContainerStyle="{StaticResource StretchListViewItemStyle}" />
                        <ListView Margin="0,20,0,0" CanDragItems="True" DragItemsStarting="ListView_OnDragItemsStarting" DragItemsCompleted="ListView_DragItemsCompleted" IsItemClickEnabled="True" ItemClick="ListView_ItemClick" ItemTemplate="{StaticResource EntryDataTemplate}" ItemContainerStyle="{StaticResource StretchListViewItemStyle}" ItemsSource="{Binding SelectedFolder.Entries}"   />
                    </StackPanel>
                    <StackPanel Visibility="{Binding InSearchMode, Converter={StaticResource BoolToVisibilityConverter}}">
                        <ListView IsItemClickEnabled="True" ItemClick="ListView_ItemClick" ItemsSource="{Binding SearchFolders}" ItemTemplate="{StaticResource FolderDataTemplate}" ItemContainerStyle="{StaticResource StretchListViewItemStyle}" />
                        <ListView Margin="0,20,0,0" IsItemClickEnabled="True" ItemClick="ListView_ItemClick" ItemTemplate="{StaticResource EntryDataTemplate}" ItemContainerStyle="{StaticResource StretchListViewItemStyle}" ItemsSource="{Binding SearchEntries}"   />
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>


    <Page.BottomAppBar>
        <CommandBar >
            <CommandBar.PrimaryCommands>
                <AppBarButton IsCompact="True" Command="{Binding RefreshCommand}" Icon="Refresh" Label="Refresh" />
                <AppBarButton IsCompact="True" Command="{Binding AddFolderCommand}" Icon="NewFolder" Label="New Folder" />
                <AppBarButton IsCompact="True" Icon="Add" Label="New Entry" >
                    <AppBarButton.Flyout>
                        <Flyout Placement="Bottom">
                            <ListView 
                                ItemsSource="{Binding ContentTypeModels}" 
                                ItemTemplate="{StaticResource ContentTypeModelTemplate}"
                                ItemContainerStyle="{StaticResource StretchListViewItemStyle}" 
                                IsItemClickEnabled="True" ItemClick="ListView_ItemClick"/>
                        </Flyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
                <AppBarToggleButton IsCompact="True" IsChecked="{Binding InSearchMode, Mode=TwoWay}" Icon="Find" Label="Find" />
            </CommandBar.PrimaryCommands>
            <CommandBar.SecondaryCommands>
                <AppBarButton IsCompact="True" Command="{Binding HelpCommand}" Icon="Help" Label="About" />
                <AppBarButton IsCompact="True" Command="{Binding GarbageCommand}" Icon="Folder" Label="Garbage" />
                <AppBarButton IsCompact="True" Command="{Binding EditFolderCommand}" CommandParameter="{Binding SelectedFolder}" Icon="Edit" Label="Edit Folder" />
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
</Page>
